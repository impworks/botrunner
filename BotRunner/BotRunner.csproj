<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Impworks.BotRunner</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Impworks</Authors>
    <Company />
    <Product>Impworks.BotRunner</Product>
    <PackageProjectUrl>https://github.com/impworks/botrunner</PackageProjectUrl>
    <RepositoryUrl>https://github.com/impworks/botrunner</RepositoryUrl>
    <PackageTags>telegram, telegram bot, framework</PackageTags>
    <Description>Tiny framework for programming Telegram Bots.</Description>
    <PackageId>Impworks.BotRunner</PackageId>
    <AssemblyName>Impworks.BotRunner</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Telegram.Bot" Version="14.12.0" />
  </ItemGroup>

</Project>
